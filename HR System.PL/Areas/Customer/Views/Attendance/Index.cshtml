@using HR_System.BLL.ModelVM.Attendance
@using HR_System.BLL.ResponseResult
@model Response<List<GetAttendanceVM>>

<style>
    /* التنسيق العام المتوافق مع باقي النظام */
    body {
        background: linear-gradient(135deg, #0B0F1A, #111827, #1F2937);
        color: #E5E7EB;
        font-family: 'Inter', 'Nunito', sans-serif;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 25px 0;
    }

    .page-title {
        font-size: 24px;
        font-weight: 600;
        color: #F9FAFB;
    }

    .glass-table {
        width: 100%;
        border-collapse: collapse;
        background: rgba(17, 24, 39, 0.85);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 12px;
        overflow: hidden;
    }

        .glass-table thead {
            background-color: rgba(2, 6, 23, 0.9);
        }

            .glass-table thead th {
                color: #9CA3AF;
                padding: 12px 15px;
            }

        .glass-table tbody td {
            padding: 10px 15px;
            vertical-align: middle;
        }

        .glass-table tbody tr:hover {
            background-color: rgba(124, 58, 237, 0.08);
        }

    .btn-action {
        min-width: 90px;
        padding: 6px 12px;
        font-size: 13px;
        border-radius: 12px;
        border: none;
        color: #fff;
    }

    .btn-primary {
        background: linear-gradient(135deg, #7C3AED, #9333EA);
    }

    .btn-info {
        background: linear-gradient(135deg, #2563EB, #3B82F6);
    }

    .btn-warning {
        background: linear-gradient(135deg, #F59E0B, #FBBF24);
        color: #111827 !important;
    }

    .btn-danger {
        background: linear-gradient(135deg, #DC2626, #EF4444);
    }

    .action-buttons {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }
</style>

<div class="container">
    <div class="page-header">
        <h2 class="page-title">Attendance Management</h2>
        <a asp-area="Customer" asp-controller="Attendance" asp-action="Create" class="btn btn-primary btn-action">
            + Create Attendance
        </a>
    </div>

    @if (Model.IsHaveErrorOrNo)
    {
        <p class="text-danger">@Model.errorMassage</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table glass-table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Employee</th>
                        <th>Date</th>
                        <th>Check In</th>
                        <th>Check Out</th>
                        <th>Duration</th>
                        <th style="width:250px">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.result)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.EmployeeName</td>
                            <td>@item.AttendanceDate.ToString("dd MMM yyyy")</td>
                            <td>@item.CheckIn.ToString("hh:mm tt")</td>
                            <td>@(item.CheckOut.HasValue? item.CheckOut.Value.ToString("hh:mm tt") : "—")</td>
                            <td>@(item.CheckOut.HasValue ? $"{item.TotalHours} Hrs" : "Active")</td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-action">Details</a>

                                    @if (!item.CheckOut.HasValue)
                                    {
                                        <button class="btn btn-warning btn-action btn-checkout" data-id="@item.Id">
                                            Check Out
                                        </button>
                                    }

                                    <button class="btn btn-danger btn-action btn-delete" data-id="@item.Id">
                                        Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // 1. منطق الحذف الاحترافي
        document.querySelectorAll('.btn-delete').forEach(btn => {
            btn.addEventListener('click', function () {
                const id = this.dataset.id;
                Swal.fire({
                    title: 'Are you sure?',
                    text: "Attendance record will be permanently removed!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#DC2626',
                    cancelButtonColor: '#6B7280',
                    confirmButtonText: 'Yes, delete it!',
                    background: '#111827',
                    color: '#fff'
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/Customer/Attendance/Delete?id=${id}`, { method: 'POST' })
                        .then(res => res.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire({ title: 'Deleted!', text: data.message, icon: 'success', background: '#111827', color: '#fff' })
                                .then(() => location.reload());
                            } else {
                                Swal.fire({ title: 'Error!', text: data.message, icon: 'error', background: '#111827', color: '#fff' });
                            }
                        });
                    }
                });
            });
        });

        // 2. منطق تسجيل الانصراف الاحترافي
        document.querySelectorAll('.btn-checkout').forEach(btn => {
            btn.addEventListener('click', function () {
                const id = this.dataset.id;
                Swal.fire({
                    title: 'Check Out?',
                    text: "Confirm employee departure time now.",
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#F59E0B',
                    confirmButtonText: 'Confirm Check Out',
                    background: '#111827',
                    color: '#fff'
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/Customer/Attendance/CheckOut?id=${id}`, { method: 'POST' })
                        .then(res => res.json())
                        .then(data => {
                            if (data.success) {
                                Swal.fire({ title: 'Success!', text: 'Checked out successfully.', icon: 'success', background: '#111827', color: '#fff' })
                                .then(() => location.reload());
                            } else {
                                Swal.fire({ title: 'Error!', text: data.message, icon: 'error', background: '#111827', color: '#fff' });
                            }
                        });
                    }
                });
            });
        });

        // 3. عرض رسائل النجاح من TempData
        @if (TempData["SuccessMessage"] != null)
        {
                <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Done!',
                    text: '@TempData["SuccessMessage"]',
                    background: '#111827',
                    color: '#fff',
                    timer: 3000,
                    showConfirmButton: false
                });
                </text>
        }
    </script>
}