@using HR_System.BLL.ModelVM.Attendance
@model CreateAttendanceVM
@inject IEmployeeService emp

@{
    var Employees = emp.GetActiveEmployee();
}
<style>
    body {
        background: linear-gradient(135deg, #0B0F1A, #111827, #1F2937);
        color: #E5E7EB;
        font-family: 'Inter', 'Nunito', sans-serif;
    }

    .glass-card {
        background: rgba(17, 24, 39, 0.85);
        backdrop-filter: blur(14px);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 16px;
        padding: 30px;
        max-width: 650px;
        margin: 40px auto;
        box-shadow: 0 20px 40px rgba(0,0,0,.4);
    }

    .page-title {
        font-size: 24px;
        font-weight: 600;
        color: #F9FAFB;
        margin-bottom: 25px;
        text-align: center;
    }

    .form-label {
        color: #9CA3AF;
        font-weight: 500;
        margin-bottom: 6px;
    }

    .form-control, .form-select {
        background: rgba(2, 6, 23, 0.85);
        border: 1px solid rgba(255,255,255,.08);
        color: #E5E7EB;
        border-radius: 12px;
        padding: 10px 14px;
    }

        .form-control:focus, .form-select:focus {
            border-color: #7C3AED;
            box-shadow: 0 0 0 .15rem rgba(124,58,237,.25);
            background: rgba(2, 6, 23, 0.95);
            color: #fff;
        }

    .text-danger {
        font-size: 13px;
        margin-top: 5px;
    }

    .btn-primary {
        background: linear-gradient(135deg, #7C3AED, #9333EA);
        border: none;
        border-radius: 14px;
        padding: 10px 18px;
        color: #fff;
        font-weight: 500;
    }

    .btn-secondary {
        background: rgba(255,255,255,.08);
        border: none;
        border-radius: 14px;
        padding: 10px 18px;
        color: #E5E7EB;
    }

    .btn-group {
        display: flex;
        gap: 12px;
        margin-top: 30px;
        justify-content: center;
    }
</style>

<div class="glass-card">

    <h2 class="page-title">Create Attendance</h2>

    <form asp-action="Create" method="post">

        <!-- Employee -->
        <div class="mb-3">
            <label asp-for="EmployeeId" class="form-label">Employee</label>
            <select asp-for="EmployeeId" class="form-select glass-input">
                <option value="">-- Select Employee --</option>

                @foreach (var e in Employees.result)
                {
                    <option value="@e.Id">
                        @e.Name
                    </option>
                }
            </select>

            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>

        <!-- Attendance Date -->
        <div class="mb-3">
            <label asp-for="AttendanceDate" class="form-label">Attendance Date</label>
            <input asp-for="AttendanceDate" type="date" class="form-control" />
            <span asp-validation-for="AttendanceDate" class="text-danger"></span>
        </div>

        <!-- Check In -->
        <div class="mb-3">
            <label asp-for="CheckIn" class="form-label">Check In Time</label>
            <input asp-for="CheckIn" type="time" class="form-control" />
            <span asp-validation-for="CheckIn" class="text-danger"></span>
        </div>
        <!-- Check Out -->
        <div class="mb-3">
            <label asp-for="CheckOut" class="form-label">Check Out Time</label>
            <input asp-for="CheckOut" type="time" class="form-control" />
            <span asp-validation-for="CheckOut" class="text-danger"></span>
        </div>
        <!-- Buttons -->
        <div class="btn-group">
            <button type="submit" class="btn btn-primary">
                ✔ Save Attendance
            </button>

            <a asp-action="Index"
               class="btn btn-secondary">
                Cancel
            </a>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

