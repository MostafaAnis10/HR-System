@using HR_System.BLL.ModelVM.Department
@using HR_System.BLL.ResponseResult
@model Response<List<GetDepartmentVM>>

@* حقن خدمة الـ Antiforgery لاستخراج التوكن *@
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

<style>
    /* ... (نفس التنسيقات الخاصة بك دون تغيير) ... */
    body {
        background: linear-gradient(135deg, #0B0F1A, #111827, #1F2937);
        color: #E5E7EB;
        font-family: 'Inter', sans-serif;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 25px 0;
    }

    .page-title {
        font-size: 24px;
        font-weight: 600;
        color: #F9FAFB;
    }

    .table-responsive {
        overflow-x: auto;
        border-radius: 12px;
    }

    .glass-table {
        width: 100%;
        border-collapse: collapse;
        background: rgba(17, 24, 39, 0.85);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 12px;
        overflow: hidden;
    }

        .glass-table thead {
            background-color: rgba(2, 6, 23, 0.9);
        }

            .glass-table thead th {
                color: #9CA3AF;
                font-weight: 600;
                padding: 12px 15px;
            }

        .glass-table tbody td {
            color: #E5E7EB;
            padding: 10px 15px;
            vertical-align: middle;
        }

        .glass-table tbody tr:hover {
            background-color: rgba(124, 58, 237, 0.08);
        }

    .btn-primary {
        background: linear-gradient(135deg, #7C3AED, #9333EA);
        border: none;
        border-radius: 12px;
        color: #fff;
    }

    .btn-danger {
        background: linear-gradient(135deg, #DC2626, #EF4444);
        border-radius: 12px;
        color: #fff;
    }

    .action-buttons {
        display: flex;
        gap: 8px;
        align-items: center;
    }

    .btn-action {
        min-width: 75px;
        padding: 6px 12px;
        font-size: 13px;
        text-align: center;
    }

    .text-danger {
        color: #EF4444;
        font-weight: 500;
        margin-top: 20px;
    }
</style>

<div class="container">
    <div class="page-header">
        <h2 class="page-title">Departments</h2>
        <a asp-action="Create" class="btn btn-primary btn-action">+ Create New</a>
    </div>

    @if (Model.IsHaveErrorOrNo)
    {
        <p class="text-danger">@Model.errorMassage</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table glass-table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th style="width:200px">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.result)
                    {
                        <tr id="row-@item.Id">
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-action">Edit</a>
                                    <button class="btn btn-danger btn-action btn-delete"
                                            data-id="@item.Id"
                                            data-name="@item.Name">
                                        Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
@if (TempData["SuccessMessage"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: '@TempData["SuccessMessage"]',
                background: '#111827',
                color: '#fff',
                confirmButtonColor: '#7C3AED',
                timer: 2500,
                showConfirmButton: false
            });
        });
    </script>
}

@section Scripts {
    <script>
        // 1. استخراج التوكن للأمان
        const antiForgeryToken = '@Antiforgery.GetAndStoreTokens(Context).RequestToken';

        // 2. استخدام Event Delegation للتعامل مع زر الحذف
        $(document).on('click', '.btn-delete', function () {
            const id = $(this).data('id');
            const name = $(this).data('name');

            Swal.fire({
                title: 'Are you sure?',
                text: `You are about to delete department "${name}". This action cannot be undone!`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#DC2626',
                cancelButtonColor: '#6B7280',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel',
                background: '#111827',
                color: '#fff'
            }).then((result) => {
                if (result.isConfirmed) {

                    // إرسال طلب الحذف
                    fetch(`/Customer/Departement/Delete?id=${id}`, {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': antiForgeryToken
                        }
                    })
                    .then(res => {
                        if (!res.ok) throw new Error('Network response was not ok');
                        return res.json();
                    })
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                title: 'Deleted!',
                                text: data.message || 'Department has been deleted.',
                                icon: 'success',
                                background: '#111827',
                                color: '#fff',
                                confirmButtonColor: '#7C3AED',
                                timer: 2000,
                                showConfirmButton: false
                            }).then(() => {
                                // حذف الصف من الجدول برمجياً بدون عمل Refresh كامل
                                $(`#row-${id}`).fadeOut(500, function() { $(this).remove(); });
                            });
                        } else {
                            Swal.fire({
                                title: 'Error!',
                                text: data.message || 'Something went wrong.',
                                icon: 'error',
                                background: '#111827',
                                color: '#fff'
                            });
                        }
                    })
                    .catch(err => {
                        console.error('Error:', err);
                        Swal.fire({
                            icon: 'error',
                            title: 'Communication Error',
                            text: 'Could not connect to server.',
                            background: '#111827',
                            color: '#fff'
                        });
                    });
                }
            });
        });
    </script>
}