@model HR_System.BLL.ModelVM.Position.EditPositionVM

<style>
    body {
        background: linear-gradient(135deg, #0B0F1A, #111827, #1F2937);
        color: #E5E7EB;
        font-family: 'Inter', 'Nunito', sans-serif;
    }

    .glass-card {
        background: rgba(17, 24, 39, 0.85);
        backdrop-filter: blur(14px);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 16px;
        padding: 40px;
        max-width: 600px;
        margin: 60px auto;
        box-shadow: 0 20px 40px rgba(0,0,0,.4);
    }

    .form-title {
        font-size: 24px;
        font-weight: 600;
        color: #F9FAFB;
        margin-bottom: 30px;
        text-align: center;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        padding-bottom: 15px;
    }

    .form-label {
        color: #9CA3AF;
        font-weight: 500;
        margin-bottom: 8px;
        display: block;
    }

    .glass-input {
        background: rgba(2, 6, 23, 0.85) !important;
        border: 1px solid rgba(255,255,255,.08) !important;
        color: #E5E7EB !important;
        border-radius: 12px !important;
        padding: 12px 16px !important;
        transition: 0.3s;
    }

        .glass-input:focus {
            border-color: #7C3AED !important;
            box-shadow: 0 0 0 .15rem rgba(124,58,237,.25) !important;
            background: rgba(2, 6, 23, 0.95) !important;
        }

    .btn-primary {
        background: linear-gradient(135deg, #7C3AED, #9333EA);
        border: none;
        border-radius: 14px;
        padding: 12px 20px;
        color: #fff;
        font-weight: 600;
        width: 100%;
        transition: 0.3s;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(124,58,237,0.3);
        }

    .btn-secondary {
        background: rgba(255,255,255,.08);
        border: none;
        border-radius: 14px;
        padding: 12px 20px;
        color: #E5E7EB;
        width: 100%;
        text-align: center;
        text-decoration: none;
        display: block;
        margin-top: 10px;
        transition: 0.3s;
    }

        .btn-secondary:hover {
            background: rgba(255,255,255,.15);
            color: #fff;
        }

    .text-danger {
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="container">
    <div class="glass-card">
        <h4 class="form-title">
            <i class="bi bi-pencil-square me-2"></i> Edit Position
        </h4>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" style="background: rgba(220, 38, 38, 0.2); border: 1px solid #DC2626; color: #fff; border-radius: 12px;">
                    @ViewBag.Error
                </div>
            }

            <div class="mb-4">
                <label asp-for="Title" class="form-label">Position Title</label>
                <input asp-for="Title" class="form-control glass-input" placeholder="Enter title..." />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="DefaultSalary" class="form-label">Default Salary</label>
                <div class="input-group">
                    <span class="input-group-text glass-input" style="border-right:none; border-top-right-radius:0; border-bottom-right-radius:0;">$</span>
                    <input asp-for="DefaultSalary" class="form-control glass-input" style="border-top-left-radius:0; border-bottom-left-radius:0;" placeholder="0.00" />
                </div>
                <span asp-validation-for="DefaultSalary" class="text-danger"></span>
            </div>

            <div class="mt-5">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i> Update Position
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}