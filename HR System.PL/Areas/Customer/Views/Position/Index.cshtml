@using HR_System.BLL.ModelVM.Position
@using HR_System.BLL.ResponseResult
@model Response<List<GetPositionVM>>

<style>
    /* =========================
           GLOBAL DARK GLASS THEME
        ========================= */
    body {
        background: linear-gradient(135deg, #0B0F1A, #111827, #1F2937);
        color: #E5E7EB;
        font-family: 'Inter', 'Nunito', sans-serif;
    }

    /* Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 25px 0;
    }

    .page-title {
        font-size: 24px;
        font-weight: 600;
        color: #F9FAFB;
    }

    /* =========================
           TABLE (Glass Style)
        ========================= */
    .table-responsive {
        overflow-x: auto;
        border-radius: 12px;
    }

    .glass-table {
        width: 100%;
        border-collapse: collapse;
        background: rgba(17, 24, 39, 0.85);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 12px;
        overflow: hidden;
    }

        .glass-table thead {
            background-color: rgba(2, 6, 23, 0.9);
        }

            .glass-table thead th {
                color: #9CA3AF;
                font-weight: 600;
                padding: 12px 15px;
            }

        .glass-table tbody td {
            color: #E5E7EB;
            padding: 10px 15px;
            vertical-align: middle;
        }

        .glass-table tbody tr:hover {
            background-color: rgba(124, 58, 237, 0.08);
        }

    /* =========================
           Buttons
        ========================= */
    .btn-primary {
        background: linear-gradient(135deg, #7C3AED, #9333EA);
        border: none;
        border-radius: 12px;
        color: #fff;
    }

    .btn-info {
        background: linear-gradient(135deg, #2563EB, #3B82F6);
        border-radius: 12px;
        color: #fff;
    }

    .btn-danger {
        background: linear-gradient(135deg, #DC2626, #EF4444);
        border-radius: 12px;
        color: #fff;
    }

    .action-buttons {
        display: flex;
        gap: 8px;
        align-items: center;
    }

    .btn-action {
        min-width: 80px;
        padding: 6px 12px;
        font-size: 13px;
        text-align: center;
    }

    .text-danger {
        color: #EF4444;
        font-weight: 500;
        margin-top: 20px;
    }
</style>

<div class="container">

    <!-- ===== Page Header ===== -->
    <div class="page-header">
        <h2 class="page-title">Positions</h2>

        <a asp-action="Create" class="btn btn-primary btn-action">
            + Create New
        </a>
    </div>

    @if (Model.IsHaveErrorOrNo)
    {
        <p class="text-danger">@Model.errorMassage</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table glass-table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Default Salary</th>
                        <th style="width:220px">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.result)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.DefaultSalary.ToString("C")</td>

                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Edit"
                                       asp-route-id="@item.Id"
                                       class="btn btn-primary btn-action">
                                        Edit
                                    </a>

                                   
                                    <button class="btn btn-danger btn-action btn-delete"
                                            data-id="@item.Id">
                                        Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@if (TempData["SuccessMessage"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Success',
            text: '@TempData["SuccessMessage"]',
            background: '#111827',
            color: '#fff',
            confirmButtonColor: '#7C3AED',
            timer: 2000,
            showConfirmButton: false
        });
    </script>
}

@section Scripts {
    <script>
        $(document).on('click', '.btn-delete', function () {

            const positionId = $(this).data('id');
            const positionTitle = $(this).closest('tr').find('td:nth-child(2)').text().trim();

            Swal.fire({
                title: 'Are you sure?',
                text: `Do you want to delete position "${positionTitle}"?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#DC2626',
                cancelButtonColor: '#6B7280',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel',
                background: '#111827',
                color: '#fff'
            }).then((result) => {
                if (result.isConfirmed) {

                    $.post(`/Customer/Position/Delete?id=${positionId}`, function (data) {

                        if (data.success) {
                            Swal.fire({
                                title: 'Deleted!',
                                text: data.message,
                                icon: 'success',
                                background: '#111827',
                                color: '#fff',
                                confirmButtonColor: '#7C3AED',
                                timer: 2000,
                                showConfirmButton: false
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire({
                                title: 'Error!',
                                text: data.message || 'Something went wrong.',
                                icon: 'error',
                                background: '#111827',
                                color: '#fff'
                            });
                        }
                    });
                }
            });
        });
    </script>
}



