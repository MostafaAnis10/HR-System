<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>HR System Dashboard</title>

    <!-- Fonts -->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700,800,900" rel="stylesheet">

    <!-- Styles -->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/css/hr-dark-glass.css" rel="stylesheet" />

</head>

<body id="page-top">

    <div id="wrapper">

        <!-- ================= Sidebar ================= -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center"
               asp-area="Customer" asp-controller="Home" asp-action="Index">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-users-cog"></i>
                </div>
                <div class="sidebar-brand-text mx-3">HR System</div>
            </a>

            <hr class="sidebar-divider my-0">

            <!-- Dashboard -->
            <li class="nav-item @(Context.Request.Path.Value.Contains("Home") ? "active" : "")">
                <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <hr class="sidebar-divider">

            <!-- HR Management -->
            <div class="sidebar-heading">
                HR Management
            </div>

            <li class="nav-item
    @(Context.Request.Path.Value.Contains("Employee") ||
                      Context.Request.Path.Value.Contains("Department") ||
                      Context.Request.Path.Value.Contains("Position") ||
                      Context.Request.Path.Value.Contains("Attendance") ||
                      Context.Request.Path.Value.Contains("LeaveRequest")
                    ? "active" : "")">

                <a class="nav-link collapsed" href="#" data-toggle="collapse"
                   data-target="#collapseHR" aria-expanded="true">
                    <i class="fas fa-fw fa-sitemap"></i>
                    <span>Organization</span>
                </a>

                <div id="collapseHR"
                     class="collapse
         @(Context.Request.Path.Value.Contains("Employee") ||
                                Context.Request.Path.Value.Contains("Department") ||
                                Context.Request.Path.Value.Contains("Position") ||
                                Context.Request.Path.Value.Contains("Attendance") ||
                                Context.Request.Path.Value.Contains("LeaveRequest")
                              ? "show" : "")">

                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Management Tools:</h6>

                        <a class="collapse-item @(Context.Request.Path.Value.Contains("Employee") ? "active" : "")"
                           asp-area="Customer" asp-controller="Employee" asp-action="Index">
                            <i class="fas fa-user-friends mr-2 text-primary"></i>
                            Employees
                        </a>

                        <a class="collapse-item @(Context.Request.Path.Value.Contains("Departement") ? "active" : "")"
                           asp-area="Customer" asp-controller="Departement" asp-action="Index">
                            <i class="fas fa-door-open mr-2 text-success"></i>
                            Departments
                        </a>

                        <a class="collapse-item @(Context.Request.Path.Value.Contains("Position") ? "active" : "")"
                           asp-area="Customer" asp-controller="Position" asp-action="Index">
                            <i class="fas fa-id-badge mr-2 text-warning"></i>
                            Positions
                        </a>

                        <a class="collapse-item @(Context.Request.Path.Value.Contains("Attendance") ? "active" : "")"
                           asp-area="Customer" asp-controller="Attendance" asp-action="Index">
                            <i class="fas fa-calendar-check mr-2 text-info"></i>
                            Attendances
                        </a>

                        <a class="collapse-item @(Context.Request.Path.Value.Contains("LeaveRequest") ? "active" : "")"
                           asp-area="Customer" asp-controller="LeaveRequest" asp-action="Index">
                            <i class="fas fa-plane-departure mr-2 text-danger"></i>
                            Leave Requests
                        </a>
                    </div>
                </div>
            </li>

            <hr class="sidebar-divider d-none d-md-block">

            <!-- Toggle -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- ============== End Sidebar ============== -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <div id="content">
                @* ===== Topbar unchanged ===== *@
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © HR System 2026</span>
                    </div>
                </div>
            </footer>

        </div>

    </div>

    <!-- Scripts -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/js/sb-admin-2.min.js"></script>
   
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
